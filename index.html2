<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Booze Bee Clothing Store</title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

<style>
body {
  margin: 0;
  font-family: Poppins, sans-serif;
  background: #000;
  color: white;
}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 28px;
  background: #111;
}

.logo {
  font-weight: 700;
  font-size: 20px;
  color: gold;
}

.cart-btn {
  cursor: pointer;
  font-weight: 600;
}

.hero {
  text-align: center;
  padding: 90px 20px;
  background: radial-gradient(circle, #111, #000);
}

.hero h1 {
  font-size: 42px;
}

.shop-title {
  text-align: center;
  margin-top: 30px;
}

.products {
  padding: 40px 20px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
  max-width: 1200px;
  margin: auto;
}

.product {
  background: #111;
  border-radius: 14px;
  padding: 16px;
  text-align: center;
  transition: 0.3s;
}

.product:hover {
  transform: scale(1.03);
  box-shadow: 0 0 14px rgba(255,215,0,0.3);
}

.product img {
  width: 100%;
  border-radius: 10px;
}

.price {
  color: gold;
  font-weight: 600;
  margin: 8px 0;
}

button {
  background: gold;
  border: none;
  padding: 10px 16px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
}

.cart {
  position: fixed;
  right: -100%;
  top: 0;
  width: 320px;
  height: 100%;
  background: #111;
  padding: 20px;
  transition: 0.3s;
  overflow-y: auto;
}

.cart.open {
  right: 0;
}

footer {
  text-align: center;
  padding: 20px;
  background: #111;
  color: gray;
}
</style>
</head>

<body>

<header>
  <div class="logo">üêù Booze Bee</div>
  <div class="cart-btn" onclick="toggleCart()">Cart üõí (<span id="count">0</span>)</div>
</header>

<section class="hero">
  <h1>Affordable Streetwear for the Bold</h1>
  <p>Oversized fits. Bee attitude. Youth pricing.</p>
</section>

<h2 class="shop-title">üî• Shop T-Shirts & Hoodies</h2>

<section class="products" id="product-list"></section>

<div class="cart" id="cart">
  <h3>Your Cart</h3>
  <div id="cart-items"></div>
  <h4 id="total"></h4>
  <button onclick="checkout()">Checkout</button>
</div>

<footer>
¬© Booze Bee Clothing ‚Äî Official Store
</footer>

<script>
const products = [
  { name: "Booze Bee Signature Oversized Tee", price: 799, img: "https://images.unsplash.com/photo-1520975682031-a8ec6f86b66a" },
  { name: "BB Street Core Tee", price: 699, img: "https://images.unsplash.com/photo-1520975610904-6a88b0d40c6e" },
  { name: "Booze Bee Logo Heavy Tee", price: 899, img: "https://images.unsplash.com/photo-1541099649105-f69ad21f3246" },
  { name: "Booze Bee Minimal Bee Tee", price: 649, img: "https://images.unsplash.com/photo-1523381294911-8d3cead13475" },
  { name: "BB Urban Drop Tee", price: 749, img: "https://images.unsplash.com/photo-1503342217505-b0a15ec3261c" },

  { name: "Booze Bee Oversized Hoodie", price: 1699, img: "https://images.unsplash.com/photo-1520974735194-9e0ce82759b7" },
  { name: "BB Heavy Street Hoodie", price: 1899, img: "https://images.unsplash.com/photo-1520975438740-55e1d947c11f" },
  { name: "Booze Bee Minimal Crewneck", price: 1499, img: "https://images.unsplash.com/photo-1503341455253-b2e723bb3dbb" },
  { name: "BB Classic Pullover Hoodie", price: 1599, img: "https://images.unsplash.com/photo-1541099649105-f69ad21f3246" }
];

const cart = [];
const productList = document.getElementById("product-list");

products.forEach((p, i) => {
  productList.innerHTML += `
    <div class="product">
      <img src="${p.img}">
      <h4>${p.name}</h4>
      <div class="price">‚Çπ${p.price}</div>
      <button onclick="addToCart(${i})">Add to Cart</button>
    </div>
  `;
});

function addToCart(index) {
  cart.push(products[index]);
  updateCart();
}

function toggleCart() {
  document.getElementById("cart").classList.toggle("open");
}

function updateCart() {
  const cartItems = document.getElementById("cart-items");
  cartItems.innerHTML = "";
  let total = 0;

  cart.forEach(item => {
    total += item.price;
    cartItems.innerHTML += `<p>${item.name} ‚Äî ‚Çπ${item.price}</p>`;
  });

  document.getElementById("total").innerText = "Total: ‚Çπ" + total;
  document.getElementById("count").innerText = cart.length;
}

function checkout() {
  alert("Checkout ready ‚Äî Razorpay integration coming next.");
}
</script>

</body>
</html>
